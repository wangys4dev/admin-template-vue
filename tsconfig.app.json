{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "auto-imports.d.ts",
    "components.d.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["element-plus/global", "unplugin-icons/types/vue"]
  }
}
